<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/header_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="20dp"

        android:layout_marginLeft="5dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/user_img"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:visibility="gone"
                android:layout_marginTop="20dp"/>
               </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Anshul"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/user_ph"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="anshn@gmail.com"
                android:textColor="@color/white"
                android:textSize="13sp" />

        </LinearLayout>



    </LinearLayout>
    </RelativeLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">
        <TextView
            android:id="@+id/my_home"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="30dp"
            android:layout_marginRight="10dp"
            android:drawablePadding="5dp"
            android:layout_marginLeft="8dp"
            android:textColor="@color/black"
            android:drawableLeft="@drawable/icn_map"
            android:gravity="center_vertical"
            android:text="Home"
            android:textSize="18sp" />
    <TextView
        android:id="@+id/my_calender"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="15dp"

        android:layout_marginLeft="1dp"
        android:drawablePadding="5dp"
        android:textColor="@color/black"
        android:padding="10dp"
        android:drawableLeft="@drawable/icn_map"
        android:gravity="center_vertical"
        android:text="Calendar"
        android:textSize="18sp" />

        <TextView
            android:id="@+id/setting"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:drawablePadding="5dp"
            android:layout_marginLeft="8dp"
            android:textColor="@color/black"
            android:drawableLeft="@drawable/icn_map"
            android:gravity="center_vertical"
            android:text="Setting"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/logout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="8dp"
            android:drawablePadding="5dp"
            android:textColor="@color/black"
            android:drawableLeft="@drawable/icn_map"
            android:gravity="center_vertical"
            android:text="Logout"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/suggest"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="8dp"
            android:drawablePadding="5dp"
            android:textColor="@color/header_background"
            android:drawableLeft="@drawable/icn_map"
            android:gravity="center"
            android:textStyle="bold"
            android:text="Suggest me to your friend"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/help"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:drawablePadding="5dp"
            android:textStyle="bold"
            android:textColor="@color/header_background"
            android:layout_marginLeft="8dp"
            android:drawableLeft="@drawable/icn_map"
            android:gravity="center"
            android:text="Help"
            android:textSize="15sp" />





</LinearLayout>


    </LinearLayout>